<script type="text/javascript">
function validate()
{
	var regex = "/^[a-zA-Z ]{0,25}$/";
	var fname = document.getElementById("fname");
	if (regex.test(fname.value)) {
        return true;
    }
    else {
        return false;
    }
}
</script>
First Name<input type = "text" id = "fname" >
<input type="button" value ="validate" onclick = "validate()">
</body>
