var objPlayer1,objPlayer2; 

function init()
{
	objPlayer1 = new Player("abc","1",0);
	objPlayer2 = new Player("xyz","2",0);
	
	var name1 = document.getElementById("name1");
	name1.value = objPlayer1.name;
	var name2 = document.getElementById("name2");
	name2.value = objPlayer2.name;
	
	var position1 = document.getElementById("position1");
	position1.value = objPlayer1.position;
	var position2 = document.getElementById("position2");
	position2.value = objPlayer2.position;
}

function Player(name, id, position)
{
	this.name = name;
	this.position = position;
	this.id = id;
}

function random()
{
